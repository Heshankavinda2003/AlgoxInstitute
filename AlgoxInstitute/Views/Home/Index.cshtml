}

<!----------------------banner section------------------->

<section id="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="promo-title">Empowering Education for All</p>
                <p class="promo-mission">Track,Learn,Succeed</p>
                <p>Supporting Inclusive and Quality Education for every student.</p>
                <p><a href="#">Watch Tutorials</a></p>
            </div>
            <div class="col-md-6 text-center">
                <img src="../images/banner.png" class="img-fluid">
            </div>
        </div>
    </div>
</section>


<!-- services section 1 -->
<section id="services">
    <div class="container text-center">
        <div class="row text-center">
            <div class="col-md-4 services service-card-1">
                <img src="../images/service1.png" class="service-img">
                <h5>Monitor Progress</h5>
                <p>Track student performance with real time analysis.</p>
            </div>
            <div class="col-md-4 services service-card-1">
                <img src="../images/service2.png" class="service-img">
                <h5>Manage Assessments</h5>
                <p>Create and grade quizzes and tests easily.</p>
            </div>
            <div class="col-md-4 services service-card-1">
                <img src="../images/service3.png" class="service-img">
                <h5>Equal Learning Oppertunities</h5>
                <p>Ensure education for all learners.</p>
            </div>
        </div>

    </div>
</section>

<!-- services section 2-->
<section id="services">
    <div class="container text-center">
        <h2 class="title">Key Features for Effective Learning</h2>
        <div class="row text-center">
            <div class="col-md-3 services service-card-2">
                <img src="../images/service1.png" class="service-img">
                <h5>Student Dashboard</h5>
                <p>View Grade & attendance.</p>
            </div>
            <div class="col-md-3 services service-card-2">
                <img src="../images/service2.png" class="service-img">
                <h5>Online Courses</h5>
                <p>Access Learning Resources.</p>
            </div>
            <div class="col-md-3 services service-card-2">
                <img src="../images/service3.png" class="service-img">
                <h5>Quizzes and Exams</h5>
                <p>Conduct Assessments.</p>
            </div>
            <div class="col-md-3 services service-card-2">
                <img src="../images/service3.png" class="service-img">
                <h5>Reports & Insights</h5>
                <p>Analyze Performance</p>
            </div>
        </div>

    </div>
</section>


<!------------------------ About Section ----------------------->

<section id="about">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left: Image -->
            <div class="col-md-6 text-center mb-4 mb-md-0">
                <img src="../images/about.png" alt="About Education" class="img-fluid about-img">
            </div>

            <!-- Right: Text -->
            <div class="col-md-6">
                <h2 class="about-title">About Our Platform</h2>
                <p class="about-text">
                    Our mission is to make high-quality education accessible to everyone.
                    We provide online courses, assessments, and progress tracking tools to help
                    students learn at their own pace while ensuring educators can monitor performance effectively.
                </p>
                <p class="about-text">
                    Whether you are a student, teacher, or institution, our system is designed
                    to support inclusive learning opportunities for all learners, even in areas
                    with limited resources.
                </p>
                <p>
                    <button class="btn-about">Learn More</button>
                </p>
            </div>
        </div>
    </div>
</section>


